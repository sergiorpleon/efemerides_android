<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="15dp"
    android:background="@drawable/box0"
     >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:minHeight="124dp"
        android:minWidth="242dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <LinearLayout
            android:id="@+id/contenedor_total"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:paddingTop="5dp" >

            <LinearLayout
                android:id="@+id/contenedor_titulo"
                android:layout_width="fill_parent"
                android:layout_height="85dp"
                
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/text_anno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/tamanno_titulo"
                    
                     />

                <TextView
                    android:id="@+id/text_titulo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Cargando..."
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/tamanno_titulo"
                    
                     />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contenedor_contenido"
                android:layout_width="fill_parent"
                android:layout_height="36dp"
                android:layout_weight="0.2"
                android:orientation="horizontal"
                android:weightSum="1" >

                <ImageButton
                    android:id="@+id/btn_ver"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom|left"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/box2"
                    android:padding="0dp"
                    android:src="@drawable/verr" />

                <ImageButton
                    android:id="@+id/btn_buscar"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom|center"
                    android:layout_weight="0.2"
                    android:background="@drawable/box3"
                    android:padding="0dp"
                    android:src="@drawable/buscarr" />

                <TextView
                    android:id="@+id/text_numero"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.6"
                    android:gravity="top|right"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/tamanno_titulo"
                    
					 />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>